!!!
%html{ lang: "ru" }
  %head
    /[if IE] <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'>
    %meta{ content: "width=device-width, initial-scale=1.0", name: "viewport" }
    %title= custom_title
    %link{ href: "/assets/favicon.ico", rel: "icon", type: "image/x-icon" }
    %link{ href: "/assets/favicon.ico", rel: "shortcut icon", type: "image/x-icon" }
    %meta{ charset: "utf-8" }
    - meta_tags.each do |name, content|
      %meta{ content: content, name: name }
    %meta{ content: "Стачка!", property: "og:site_name" }
    - if @lecture_id and @lecture_by_id
      %meta{ content: "#{root_url}#{@lecture_by_id.lector_photo if @lecture_by_id.lector_photo}", property: "og:image" }
      %meta{ content: "455", property: "og:image:width" }
      %meta{ content: "450", property: "og:image:height" }
      %meta{ content: @lecture_by_id.thesises, property: "og:description" }
      %meta{ content: "#{@lecture_by_id.title}(#{@lecture_by_id.lector_name})", property: "og:title" }
      %meta{ content: "#{lectures_url}?lecture_id=#{@lecture_id}", property: "og:url" }
    - else
      %meta{ content: asset_url("web/og_image_2.png"), property: "og:image" }
      %meta{ content: "250", property: "og:image:width" }
      %meta{ content: "250", property: "og:image:height" }
      %meta{ content: "http://nastachku.ru/", property: "og:url" }
    = csrf_meta_tag
    = stylesheet_link_tag 'web/promo'
    = stylesheet_link_tag "web/application"
    = javascript_include_tag "application"
    = javascript_include_tag 'promo'
    
    = include_gon
    = render 'layouts/web/shared/google_analytics'
  %body
    = render 'layouts/web/shared/yandex_metrics'
    = render "layouts/web/shared/retarget"
    #layout
      = render "layouts/web/shared/header"
      = render "layouts/web/shared/plaha"
      = bootstrap_flash
      = yield
      - unless in_account?
        -#= render "layouts/web/shared/organizers"
        -#= render "layouts/web/shared/internet_partners"
        -# = render "layouts/web/shared/strategy_partners"
        -# = render "layouts/web/shared/tech_provision_partners"
        -#= render "layouts/web/shared/general_sponsor"
        -#= render "layouts/web/shared/platin_sponsor"
        -# = render "layouts/web/shared/gold_sponsor"
        -#= render "layouts/web/shared/silver_sponsor"
        -# = render "layouts/web/shared/with_support"
        -# = render "layouts/web/shared/general_info_partners"
        -#= render "layouts/web/shared/seo_partners"
        -#= render "layouts/web/shared/digital_partners"
        -#= render "layouts/web/shared/analytics_partners"
        -# = render "layouts/web/shared/info_partners"
        -# = render "layouts/web/shared/email_marketing_partners"
        -# = render "layouts/web/shared/hashtag_partner"
        -# = render "layouts/web/shared/landing_partner"
        -# = render "layouts/web/shared/secure_partner"
        -# = render "layouts/web/shared/monitoring_partner"
        -# = render "layouts/web/shared/event_partner"
      = render "layouts/web/shared/footer"
    #overlay.overlay
    - unless current_user
      = render "layouts/web/shared/authpopup"
