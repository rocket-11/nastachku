.pagetitle.mainpage__title.lectures__title
  .layout-line
    %h1.pagetitle__title= t '.events20'
    .pagetitle__select.pagetitle__select__lecture
      = select_tag :filter_user_lectures_by_workshop, options_for_select([["Все доклады", " "]] + @workshops.collect{ |w| [w.title, w.id, {'data-icon' => w.icon}]}), class: "custom_select"
.content.lectures
  .layout-line
    %h5
      = t('.user_lectures_title_before_link')
      = succeed ',' do
        = link_to t(".user_lectures_title_link"), new_account_lecture_path
      = t('.user_lectures_title_after_link')
    %ul#lectures.lectures__items
      = render 'lectures'

= javascript_include_tag "web/fancySelect"
:javascript
  if ("#{@lecture_id}" != "") {
    window.location.hash = "lecture_#{@lecture_id}"
  }
